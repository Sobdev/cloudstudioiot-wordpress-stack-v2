{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        /* Paths */
        "baseUrl": ".",
        "paths": {
            "@cloudstudio/shared/*": [
                "packages/shared/src/*"
            ],
            "@cloudstudio/plugin/*": [
                "packages/plugin/src/*"
            ],
            "@cloudstudio/theme/*": [
                "packages/theme/src/*"
            ]
        }
    },
    "include": [
        "packages/**/*.ts",
        "packages/**/*.tsx",
        "scripts/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/dist",
        "**/builds"
    ]
}