{
    "name": "@cloudstudio/wordpress-stack",
    "version": "2.0.0-alpha.1",
    "private": true,
    "description": "Next-generation WordPress development stack for Cloud Studio IoT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Sobdev/cloudstudioiot-wordpress-stack-v2.git"
    },
    "license": "UNLICENSED",
    "author": "Cloud Studio IoT <dev@cloud.studio>",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "dev": "concurrently \"pnpm:dev:*\"",
        "dev:plugin": "pnpm --filter @cloudstudio/plugin dev",
        "dev:theme": "pnpm --filter @cloudstudio/theme dev",
        "build": "tsx scripts/build.ts",
        "build:plugin": "pnpm --filter @cloudstudio/plugin build && pnpm --filter @cloudstudio/plugin build:zip",
        "build:theme": "pnpm --filter @cloudstudio/theme build && pnpm --filter @cloudstudio/theme build:zip",
        "test": "pnpm --recursive test",
        "test:unit": "vitest run",
        "test:watch": "vitest",
        "test:e2e": "playwright test",
        "test:php": "composer test",
        "lint": "concurrently \"pnpm:lint:*\"",
        "lint:js": "eslint --ext .js,.jsx,.ts,.tsx .",
        "lint:css": "stylelint \"**/*.css\"",
        "lint:php": "composer lint",
        "lint:fix": "pnpm lint:js --fix && pnpm lint:css --fix",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
        "type-check": "tsc --noEmit",
        "clean": "pnpm --recursive clean && rm -rf builds",
        "prepare": "husky install",
        "deploy:staging": "tsx scripts/deploy.ts --target=staging",
        "deploy:production": "tsx scripts/deploy.ts --target=production"
    },
    "devDependencies": {
        "@playwright/test": "^1.40.1",
        "@types/node": "^20.10.5",
        "@types/wordpress__block-editor": "^11.5.8",
        "@types/wordpress__blocks": "^12.5.7",
        "@types/wordpress__components": "^23.0.9",
        "@types/wordpress__data": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "concurrently": "^8.2.2",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.0",
        "prettier": "^3.1.1",
        "stylelint": "^16.1.0",
        "stylelint-config-standard": "^36.0.0",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3",
        "vite": "^5.0.10",
        "vitest": "^1.0.4"
    },
    "engines": {
        "node": ">=20.0.0",
        "pnpm": ">=8.0.0"
    },
    "packageManager": "pnpm@8.12.1",
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.css": [
            "stylelint --fix",
            "prettier --write"
        ],
        "*.{json,md}": [
            "prettier --write"
        ],
        "*.php": [
            "composer lint:fix"
        ]
    }
}